@page
@model Dfe.Complete.Pages.Projects.Completion._TransferValidationNotificationModel
@{
    var validationResult = Model.TransferCompletionValidationResult;
}

@if (validationResult != null && validationResult.ShowNotification)
{
    <div class="govuk-notification-banner" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
        <div class="govuk-notification-banner__header">
            <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                Important
            </h2>
        </div>
        <div class="govuk-notification-banner__content">
            <p>This project cannot be completed until:</p>
            <ul>
                @if (validationResult!.DateConfirmedAndInThePast)
                {
                    <li>The transfer date has been confirmed and is in the past</li>
                }
                @if(validationResult!.AuthorityToProceedCompleteTaskCompleted)
                {
                    <li>The confirm this transfer has authority to proceed task is completed</li>
                }
                @if (validationResult!.ExpendentureCertificateTaskCompleted)
                {
                    <li>The receive declaration of expenditure certificate task is completed</li>
                }
                @if (validationResult!.AcademyTransferDateTaskCompleted)
                {
                    <li>The confirm the date the academy transferred task is completed</li>
                }
            </ul>           
        </div>
    </div>
}