@page "/projects/all/handover/{projectId}/new" 
@model Dfe.Complete.Pages.Projects.List.HandoverProjects.NewHandoverProjectModel 
@{
    var projectAssignmentConfirmationMessage = Model.AssignedToRegionalCaseworkerTeam == true
        ? "Project handed over to Regional Casework Services"
        : "Project assigned";
    ViewData["Title"] = Model.DisplayConfirmation ? projectAssignmentConfirmationMessage : "Add handover details";
}
@if (Model.DisplayConfirmation)
{
    <partial name="_HandoverProjectAssignedConfirmation" model="Model" />
}
else
{
    <partial name="_NewHandoverProject" model="Model" /> 
}