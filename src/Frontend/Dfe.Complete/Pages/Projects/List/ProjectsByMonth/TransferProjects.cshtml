@page "/projects/all/by-month/transfers/{month}/{year}" 
@model Dfe.Complete.Pages.Projects.List.ProjectsByMonth.TransferProjectsByMonthModel
@{
    Layout = "List/ProjectsByMonth/_ProjectsByMonthLayout";
    ViewData["Title"] = "Academies opening or transferring";
    
    var exportLink = $"/projects/all/export/by-significant-date/transfers/all-data/{Model.Month}/{Model.Year}/csv";
}

@section PageHeading
{
    <span class="govuk-caption-l">Academies opening or transferring</span>
    <h1 class="govuk-heading-l">
        @Model.DateString
    </h1>
    <p>Schools that will become academies, and academies that will move to a different trust.</p>

    <p>You can also <a href="@exportLink">download a more detailed version of the data as a CSV file.</a></p>
}

<div class="govuk-grid-column-full">
    @{
        if (Model.Projects.Any())
        {
            <partial name="Projects/List/ProjectsByMonth/_ProjectsByMonthTable" model="@Model.Projects" />
        }
        else
        {
            <div class="govuk-inset-text">
                There are no projects due to transfer between @Model.DateString and @Model.DateString
            </div>
        }
    }
</div>