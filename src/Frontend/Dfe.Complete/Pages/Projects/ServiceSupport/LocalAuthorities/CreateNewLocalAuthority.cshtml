@page "/service-support/local-authorities/new"
@using Dfe.Complete.Constants
@model Dfe.Complete.Pages.Projects.ServiceSupport.LocalAuthorities.CreateNewLocalAuthorityModel
@{
    Layout = "ServiceSupport/_ServiceSupportLayout";
    ViewData["Title"] = "New local authority";
}
<div class="govuk-grid-column-two-thirds">
    <partial name="_ErrorSummary" />
    <h1 class="govuk-heading-l">
        New local authority
    </h1>

    <form method="post" novalidate>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.Name">
            <govuk-input-label class="govuk-label--m">Name</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-10" asp-for="@Model.Code">
            <govuk-input-label class="govuk-label--m">Code</govuk-input-label>
        </govuk-input> 
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.Address1">
            <govuk-input-label class="govuk-label--m">Address line 1</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.Address2">
            <govuk-input-label class="govuk-label--m">Address line 2</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.Address3">
            <govuk-input-label class="govuk-label--m">Address line 3</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.AddressTown">
            <govuk-input-label class="govuk-label--m">Town</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.AddressCounty">
            <govuk-input-label class="govuk-label--m">County</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.AddressPostcode">
            <govuk-input-label class="govuk-label--m">Postcode</govuk-input-label>
        </govuk-input>

        <h2 class="govuk-heading-l">
            Director of child services
        </h2>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.Title">
            <govuk-input-label class="govuk-label--m">DCS Position</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.ContactName">
            <govuk-input-label class="govuk-label--m">Name</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-20" asp-for="@Model.Email">
            <govuk-input-label class="govuk-label--m">Email</govuk-input-label>
        </govuk-input>
        <govuk-input input-class="govuk-input--width-10" asp-for="@Model.Phone">
            <govuk-input-label class="govuk-label--m">Phone</govuk-input-label>
        </govuk-input> 
        <div class="govuk-button-group">
            <button type="submit" formnovalidate="formnovalidate" class="govuk-button" data-module="govuk-button" data-prevent-double-click="true">Save and return</button>
            <a class="govuk-link" href="@RouteConstants.ListLocalAuthorities">Cancel</a>
        </div>
    </form>
</div>