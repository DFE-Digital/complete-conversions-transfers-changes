@page "/service-support/local-authorities/{id}/delete"
@model Dfe.Complete.Pages.Projects.ServiceSupport.LocalAuthorities.DeleteLocalAuthorityModel
@{
    Layout = "ServiceSupport/_ServiceSupportLayout";
    ViewData["Title"] = "Delete local authority";
}

<div class="govuk-grid-column-two-thirds">
    <form class="delete_local_authority" id="delete_local_authority_@Model.Id"  method="post"> 
        <h1 class="govuk-heading-l">Are you sure you want to delete the record for @Model.Name?</h1>
        <p>This action will remove the local authority record for @Model.Name from this application.</p>
        <div class="govuk-button-group">
            <button type="submit" formnovalidate="formnovalidate" class="govuk-button govuk-button--warning" data-module="govuk-button" data-prevent-double-click="true">Delete</button>
            <a class="govuk-link" href="@Model.EditLocalAuthorityUrl(Model.Id.ToString())">Cancel</a>
        </div>
    </form>
</div>