@page "/projects/{projectId}/external-contacts/new/create-other-contact"
@model Dfe.Complete.Pages.Projects.ExternalContacts.New.CreateOtherExternalContact

@{
  ViewData["Title"] = "Add contact";
  Layout = "Shared/_Layout";
}

<div class="govuk-width-container">
  <nav aria-label="back link">
    <a class="govuk-back-link" href="/projects/@Model.ProjectId/external-contacts">Back</a>
  </nav>
  <main class="govuk-main-wrapper app-content" id="main-content" role="main">

    <div class="govuk-grid-row govuk-body">
      <div class="govuk-grid-column-full">
        <span class="govuk-caption-l">Add a contact</span>
        <h1 class="govuk-heading-l">Enter contact details</h1>
      </div>
    </div>
    <div class="govuk-grid-row govuk-body">
        <div class="govuk-grid-column-two-thirds">
            <form method="post">                
                    @await Html.PartialAsync("_OtherExternalContactForm", model: Model.ExternalContactInput)
                    <div class="govuk-button-group">
                        <govuk-button type="submit" data-prevent-double-click="true">
                            Save and continue
                        </govuk-button>
                        <a class="govuk-link" href="/projects/@Model.ProjectId/external-contacts">Cancel</a>
                    </div>
            </form>
        </div>
    </div>
  </main>
</div>