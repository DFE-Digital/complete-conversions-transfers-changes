@page "/projects/{projectId}/external-contacts/{contactId}/delete"
@using Dfe.Complete.Pages.Projects.ExternalContacts
@using Dfe.Complete.Constants
@model Dfe.Complete.Pages.Projects.ExternalContacts.DeleteExternalContact

@{
    Layout = "Shared/_Layout";
    ViewData["Title"] = $"Are you sure you want to delete {Model.FullName}";

    var projectsExternalContactEditLink = string.Format(RouteConstants.ProjectsExternalContactEdit, Model.ProjectId, Model.ContactId);

    var errorSummaryModel = new Dfe.Complete.Models.ErrorSummaryModel
    {
        HideKeyInErrorMessage = true
    };
}

@section BeforeMain
{
    <govuk-back-link href="@projectsExternalContactEditLink" xmlns="http://www.w3.org/1999/html" />
}

<div class="govuk-grid-row govuk-body">
    <div class="govuk-grid-column-two-thirds">
        @await Html.PartialAsync("_ErrorSummary", model: errorSummaryModel)
        <form class="edit_contact_project" id="delete_contact_project" accept-charset="UTF-8" method="post" novalidate>
            <h1 class="govuk-heading-l">Are you sure you want to delete @Model.FullName?</h1>
            <p>This will remove the contact for @Model.Role called @Model.FullName from the contacts list.</p>

            <div class="govuk-button-group">
                <govuk-button type="submit" class="govuk-button--warning" data-prevent-double-click="true">
                    Delete
                </govuk-button>
                <a class="govuk-link" href="@projectsExternalContactEditLink">Cancel</a>
            </div>
        </form>
    </div>
</div>

