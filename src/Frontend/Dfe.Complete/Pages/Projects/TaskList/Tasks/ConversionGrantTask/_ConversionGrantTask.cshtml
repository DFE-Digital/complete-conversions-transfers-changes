@model Dfe.Complete.Pages.Projects.TaskList.Tasks.ConversionGrantTask.ConversionGrantTaskModel

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Conversion Grant</h1>
        
        <p class="govuk-body">
            Complete conversion grant tasks for @Model.SchoolName.
        </p>

        @if (Model.Notes.Any())
        {
            <div class="govuk-inset-text">
                <h2 class="govuk-heading-m">Notes</h2>
                @foreach (var note in Model.Notes)
                {
                    <div class="govuk-!-margin-bottom-3">
                        <p class="govuk-body">@note.Body</p>
                        <p class="govuk-body-s govuk-!-margin-bottom-0">
                            Added by @note.UserFullName on @note.CreatedAt.ToString("dd/MM/yyyy")
                        </p>
                    </div>
                }
            </div>
        }

        <form method="post">
            <div class="govuk-form-group">
                <label class="govuk-label govuk-label--m" for="conversion-grant-notes">
                    Add notes about conversion grant
                </label>
                <textarea class="govuk-textarea" id="conversion-grant-notes" name="notes" rows="5"></textarea>
            </div>

            <button type="submit" class="govuk-button" data-module="govuk-button">
                Save and continue
            </button>
        </form>
    </div>
</div>
