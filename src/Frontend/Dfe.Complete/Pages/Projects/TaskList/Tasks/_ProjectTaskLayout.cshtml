@using Dfe.Complete.Constants
@using Dfe.Complete.Utils

@model Dfe.Complete.Pages.Projects.TaskList.Tasks.BaseProjectTaskModel
@{
    Layout = "Shared/_Layout";
    var backlink = string.Format(RouteConstants.ProjectTaskList, Model.ProjectId);
}

@section BeforeMain
{
    <govuk-back-link href="@backlink" xmlns="http://www.w3.org/1999/html" />
}

<main class="govuk-grid-row govuk-!-margin-bottom-9">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-xl govuk-!-margin-bottom-2" data-testid="title">
                <span class="govuk-caption-l" data-testid="school-name">@Model.Establishment.Name</span>
                @Model.TaskIdentifier.ToDisplayDescription()
            </h1>
            @await RenderSectionAsync("TaskHeaderHintSection", required: false)
        </div>
    </div>
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            @await RenderSectionAsync("TaskSection", required: true)
        </div>
        <div class="govuk-grid-column-one-third">
            @await Html.PartialAsync("_ProjectTaskNotes", Model)
        </div>
    </div>
</main>
