@using Dfe.Complete.Domain.Enums
@model Dfe.Complete.Pages.Projects.TaskList.Tasks.HandoverWithDeliveryOfficerTask.HandoverWithDeliveryOfficerTaskModel

<form method="post" class="govuk-form-group govuk-!-margin-bottom-0">
    @if (Model.Project != null && Model.Project.Type == ProjectType.Conversion)
    {
        <div class="govuk-form-group govuk-!-margin-bottom-2">
            <label class="govuk-label" for="conversionHandoverField">Conversion Handover Field</label>
            <input class="govuk-input" type="text" id="conversionHandoverField" name="conversionHandoverField" />
        </div>
    }

    @if (Model.Project != null && Model.Project.Type == ProjectType.Transfer)
    {
        <div class="govuk-form-group govuk-!-margin-bottom-2">
            <label class="govuk-label" for="transferHandoverField">Transfer Handover Field</label>
            <input class="govuk-input" type="text" id="transferHandoverField" name="transferHandoverField" />
        </div>
    }

    <div class="govuk-button-group govuk-!-margin-bottom-0">
        <button class="govuk-button" type="submit">Complete handover</button>
    </div>
</form>
