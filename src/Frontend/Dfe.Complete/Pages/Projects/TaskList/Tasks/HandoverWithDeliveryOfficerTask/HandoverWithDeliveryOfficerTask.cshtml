@page "/projects/{projectId:guid}/tasks/handover"
@model Dfe.Complete.Pages.Projects.TaskList.Tasks.HandoverWithDeliveryOfficerTask.HandoverWithDeliveryOfficerTaskModel
@{
    Layout = "../ProjectTaskLayout";
}

@section TaskContent
{
    @if (Model.Project.Type == Dfe.Complete.Domain.Enums.ProjectType.Conversion)
    {
        @await Html.PartialAsync("_HandoverFormConversion", Model)
    }
    else if (Model.Project.Type == Dfe.Complete.Domain.Enums.ProjectType.Transfer)
    {
        @await Html.PartialAsync("_HandoverFormTransfer", Model)
    }
}
}
