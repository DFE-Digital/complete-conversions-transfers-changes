@model Dfe.Complete.Pages.Projects.TaskList.Tasks.ConfirmHeadteacherContactTask.ConfirmHeadteacherContactTaskModel
@{
    ViewBag.Title = "Confirm headteacher contact";
    Layout = "_layout";
}

<div class="task-section">
    <h3 class="govuk-heading-m">Confirm headteacher contact</h3>
    
    <div class="govuk-body">
        <p>Task for confirming the headteacher contact details.</p>
    </div>
    
    @if (Model.Notes.Any())
    {
        <div class="govuk-!-margin-top-6">
            <h2 class="govuk-heading-m">Notes</h2>
            @foreach (var note in Model.Notes)
            {
                <div class="govuk-!-margin-bottom-3">
                    <p class="govuk-body">@note.Body</p>
                    <p class="govuk-body-s govuk-!-margin-bottom-0">
                        Added by @note.UserFullName on @note.CreatedAt.ToString("dd/MM/yyyy")
                    </p>
                </div>
            }
        </div>
    }
</div>
