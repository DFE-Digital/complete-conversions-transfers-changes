@page "/projects/{projectId}/information"
@using Dfe.Complete.Domain.Enums
@model Dfe.Complete.Pages.Projects.AboutTheProject.AboutTheProjectModel

@{
    Layout = "Projects/_ProjectLayout";
    ViewData["Title"] = Model.Establishment.Name;
}

@if (Model.Project.Type == ProjectType.Conversion)
{
  @await Html.PartialAsync("_AboutConversionProject", Model)
}

@if (Model.Project.Type == ProjectType.Transfer)
{
  @await Html.PartialAsync("_AboutTransferProject", Model)
}