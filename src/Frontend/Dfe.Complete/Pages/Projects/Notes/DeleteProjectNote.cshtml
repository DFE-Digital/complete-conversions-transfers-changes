@page "/projects/{projectId}/notes/{noteId?}/delete"
@using Dfe.Complete.Constants;
@model Dfe.Complete.Pages.Projects.Notes.DeleteProjectNoteModel
@{
    ViewData["Title"] = "Complete conversions, tranfers and changes";
}

<div class="govuk-grid-column-two-thirds">
    <form class="delete_project_note" id="delete_project_note_@Model.ProjectId" method="post">
        <input type="hidden" name="TaskIdentifier" value="@Model.TaskIdentifier" />
        <h1 class="govuk-heading-l">Are you sure you want to delete this note?</h1>
        <p>This will remove the note from the project. If this note contains outdated information, it may be better to
            leave a new note with an update instead.</p>
        <div class="govuk-button-group">
            <button type="submit" formnovalidate="formnovalidate" class="govuk-button govuk-button--warning"
                data-module="govuk-button" data-prevent-double-click="true">Delete</button>
            <a class="govuk-link"
                href="@Model.GetReturnUrl(Model.TaskIdentifier)">Cancel</a>
        </div>
    </form>
</div>
