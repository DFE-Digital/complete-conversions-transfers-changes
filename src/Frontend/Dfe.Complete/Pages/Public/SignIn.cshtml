@page "/sign-in"
@model Dfe.Complete.Pages.Public.SignInModel

@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    ViewBag.Title = "Sign in";
    Layout = "Shared/_Layout";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Sign in
        </h1>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" data-module="govuk-error-summary">
                <h2 class="govuk-error-summary__title" id="error-summary-title">
                    There is a problem
                </h2>
                <div class="govuk-error-summary__body">
                    <p class="govuk-error-summary__list">@Model.ErrorMessage</p>
                </div>
            </div>
        }

        <p class="govuk-body">This product can be used by delivery officers or caseworkers at the Department for Education.</p>
        <p class="govuk-body">It can also be used by the Academies Operational Practice Unit and Service Support team, as well as some teams at the Education and Skills Funding Agency.</p>
        <p class="govuk-body">You can use this product to manage work that helps DfE to convert schools to academies.</p>

        <form method="post" data-cy="sign-in-form">
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" data-cy="return-url-input" />
            <button class="govuk-button" data-module="govuk-button" type="submit" data-cy="sign-in-button">
                Sign in with your DfE Microsoft account
            </button>
        </form>
        
        <h2 class="govuk-heading-m">Register for access</h2>
        <p class="govuk-body">If you do not have access you can <external-link href="@Configuration["ExternalLinks:SignUpForAccess"]" class="govuk-link" data-cy="sign-up-link">sign up to use Complete conversions, transfers and changes (opens in new tab)</external-link>.</p>
        <p class="govuk-body">To register, you'll need to provide your:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>full name</li>
            <li>@@education.gov.uk email address</li>
            <li>team information</li>
            <li>job title</li>
        </ul>
        
        <h2 class="govuk-heading-m">How to use Complete conversions, transfers and changes</h2>
        <p class="govuk-body">You can <external-link href="@Configuration["HowToUseLink"]" class="govuk-link" data-cy="how-to-use-link">read our guidance about how to use the product (opens in new tab)</external-link> if you're new to Complete conversions transfers and changes or just unsure on how to do certain things with it.</p>
        
        <h2 class="govuk-heading-m">Updates and releases</h2>
        <p class="govuk-body">We regularly update the product and release new versions of it, based on user feedback.</p>
        <p class="govuk-body">You can <external-link href="@Configuration["ExternalLinks:ReleaseNotes"]" class="govuk-link" data-cy="release-notes-link">read our release notes (opens in new tab)</external-link> to find out what we've done to improve the product.</p>
    </div>
</div>